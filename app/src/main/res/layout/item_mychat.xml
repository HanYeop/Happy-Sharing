<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/otherMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/chat_border"
        android:maxEms="14"
        android:padding="8dp"
        android:text="메시지"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        app:layout_constraintTop_toBottomOf="@+id/userIdText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/myMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/chat_border"
        android:maxEms="14"
        android:padding="8dp"
        android:text="메시지"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="59dp"
        android:layout_height="17dp"
        android:gravity="right"
        android:text="8/7 16:00"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/myMessageText"
        app:layout_constraintTop_toBottomOf="@+id/myMessageText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/timeText2"
        android:layout_width="59dp"
        android:layout_height="17dp"
        android:gravity="right"
        android:text="8/7 16:00"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/otherMessageText"
        app:layout_constraintTop_toBottomOf="@+id/otherMessageText"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/userIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="홍길동"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        app:layout_constraintTop_toTopOf="@+id/profileImageView"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>